{
	"plugins": ["plugins/markdown"],
	"source": {
		"include": [
			"./public/",
			"./package.json",
			"./README.md"
		],
		"exclude" : [
			"./public/ext/"
		]
	},
	"sourceType": "module",
	"opts": {
		"encoding": "utf8",
		"destination": "doc",
		"recurse": true,
		"template": "node_modules/clean-jsdoc-theme"
	},
	"templates": {
		"cleverLinks": true
	}
}
